{
  "name": "grimoire-gen",
  "version": "0.1.0",
  "description": "Generate navigable documentation CLIs for any codebase",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpm/grimoire"
  },
  "keywords": [
    "cli",
    "documentation",
    "codebase",
    "ai",
    "effect",
    "scaffolding",
    "navigation"
  ],
  "bin": {
    "grimoire": "./bin.js"
  },
  "files": [
    "bin.js",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tsconfig.json",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@effect/ai": "^0.33.2",
    "@effect/ai-anthropic": "^0.23.0",
    "@effect/cli": "^0.73.0",
    "@effect/platform": "^0.94.1",
    "@effect/platform-bun": "^0.87.0",
    "effect": "^3.19.14",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "typescript": "^5.7.0"
  }
}
